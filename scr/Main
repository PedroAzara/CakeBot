import discord
from discord.ext import commands

client = commands.Bot(command_prefix='c!')
shared = discord.AutoShardedClient(shard_count=2, shard_ids=(2,3))
client.remove_command('help')

modulos = ["pic", "clima"]

@client.event
async def on_ready():
	print ('___'*20)
	print(f'Nome: {client.user.name}')
	print(f'Id: {client.user.id}')
	print ('Bot Online!')
	print ('___'*20)
	await client.change_presence(activity=discord.Streaming(name='Hoje Ã© quinta-feira meus bacanos!',url='https://www.twitch.tv/CakeBot'))

	
	if __name__ == '__main__':
		try:
			for modulo in modulos:
				client.load_extension(modulo)
			
		except Exception as e:
			print(f'[Erro] : {modulo} - {e}')





client.run('NTIwMjgwNTUxMzg3ODI0MTI5.Dxfakw.3XDXRBBDGJbYuKmusUp3d1lp4PU')
	
		 
