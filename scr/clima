import discord
from discord.ext import commands
import requests
import json

class clima():
    def __init__(self, client):
        self.client = client

    @commands.command()
    async def clima(self, ctx, *, buscar=None):
        if buscar is None: 
            await ctx.send(f'Olá {ctx.author.mention}, você precisa digitar uma cidade ou país!')
            return

        busca = str(buscar).replace('  ','%20')
        r = requests.get(f'http://api.apixu.com/v1/current.json?key=15ab8408bd144bd0a16232633190901&q={busca}')
        if r.status_code == 200:
            js = r.json()

        embed=discord.Embed(title="Previsão do Tempo para {}".format(busca), color=0x0a83fc)
        embed.add_field(name="Cidade", value=str(js['location']['name']), inline=False)
        embed.add_field(name="Estado", value=str(js['location']['region']), inline=True)
        embed.add_field(name="País", value=str(js['location']['country']), inline=False)
        embed.add_field(name="Latitude", value=str(js['location']['lat']), inline=False)
        embed.add_field(name="Longitude", value=str(js['location']['lon']), inline=False) 
        embed.add_field(name="Condição", value=str(js['current']['condition']['text']), inline=False)
        embed.add_field(name="Temperatura em C°", value=str(js['current']['temp_c']), inline=False) 
        url = 'https:'+str(js['current']['condition']['icon'])
        embed.set_thumbnail(url=url)
        embed.set_footer(text="Climatempo 2019 Todos os Direitos Reservados")
        await ctx.send(embed=embed)
        

        




def setup(client):
    print('[Comando Clima] Carregado!')
    client.add_cog(clima(client))
